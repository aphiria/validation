{
    "name": "aphiria/validation",
    "description": "The Aphiria validation library",
    "keywords": [
        "PHP",
        "validation",
        "input",
        "model state"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@opulencephp.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Validation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Validation\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/reflection": "1.0.*@dev",
        "doctrine/annotations": "2.0.*@dev",
        "ext-intl": "*",
        "php": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
